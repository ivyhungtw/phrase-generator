<div class="container" style="max-width: 1200px;">
    {{!-- Title --}}
    <div class="row my-5">
      <div class="col d-flex justify-content-center">
        <h1>你想對誰說幹話？</h1>
      </div>
    </div>
    
    <form method="POST" action="/">
      <div class="row row-cols-1 row-cols-md-3 g-4 mb-3">
        {{!-- Render Jobs --}}
        {{#each jobs}}
        <div class="col">
          <div class="card h-100" style="border: none;">
            <img src="{{this.image}}" class="card-img-top" alt="{{this.title}}" style="height: 18rem">
            <div class="card-body">
              <div class="card-body d-flex justify-content-center">
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="job" id="{{this.job}}" value="{{this.job}}">
                  <label class="form-check-label" for="{{this.job}}">
                    {{this.title}}
                  </label>
                </div>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
      <div class="row justify-content-center">
        {{!-- Button --}}
        <div class="col-md-2 d-flex justify-content-center mb-2">
          <button class="btn btn-success" type="submit">產生幹話</button>
        </div>
        {{!-- Phrase --}}
        <div class="col-md-6">
          <textarea class="form-control" rows="1" id="trash_talk">{{ phrase }}</textarea>
        </div>
      </div>
    </form>
    
  </div>